#!/usr/bin/env bash
#
# Summary: Fake install program
#
# Usage: jlenv install version
#

set -e
[ -n "$JLENV_DEBUG" ] && set -x

DIR=$(cd -P -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd -P)
source ${DIR}/../test_helper.bash

# Define `before_install` and `after_install` functions that allow
# plugin hooks to register a string of code for execution before or
# after the installation process.
declare -a after_hooks

after_install() {
  local hook="$1"
  after_hooks["${#after_hooks[@]}"]="$hook"
}

if [ -n "$INSTALL_HOOK" ]
then
  echo Sourcing "$INSTALL_HOOK"
  source "$INSTALL_HOOK"
fi

STATUS=0

case "$1" in
[0-9].*)
  VERSION_NAME=$1
  d="$JLENV_ROOT/versions/$1"
  mkdir -p "$d"
  echo $1 > "$d/RELEASE.txt"
  echo "Installed fake version $1"
  echo "into $d directory"
  # create_versions $1
  echo Executing after_install hooks.
  for hook in "${after_hooks[@]}"; do eval "$hook"; done

  ;;
*)
  echo 'Usage: jlenv-install version'
  ;;
esac
exit $STATUS
